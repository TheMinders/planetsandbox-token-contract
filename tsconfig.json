{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es6"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "sourceMap": false,
    "strict": true,
    "target": "es6",
    "baseUrl": ".",
    "paths": {
      "@config/*": [
        "config/*"
      ],
      "@interfaces/*": [
        "interfaces/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "files": [
    "./hardhat.config.ts"
  ],
  "include": [
    "tasks/**/*.ts",
    "test/**/*.ts",
    "typechain/**/*.d.ts",
    "typechain/**/*.ts"
  ]
}